{
  "name": "huge-ai-search",
  "publisher": "hudawang",
  "displayName": "HUGE",
  "description": "在 VS Code 里直接对话 HUGE AI，支持连续追问、代码选中发送与来源核验。",
  "icon": "media/huge-ai-chat-icon.png",
  "version": "0.4.18",
  "author": "TigerWang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangwingzero/huge-ai-search.git"
  },
  "bugs": {
    "url": "https://github.com/wangwingzero/huge-ai-search/issues"
  },
  "homepage": "https://github.com/wangwingzero/huge-ai-search/tree/main/extensions/huge-ai-chat",
  "keywords": [
    "vscode",
    "google",
    "ai",
    "mcp",
    "search",
    "chat"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hugeAiChatContainer",
          "title": "HUGE",
          "icon": "media/huge-ai-chat-icon.png"
        }
      ]
    },
    "views": {
      "hugeAiChatContainer": [
        {
          "id": "hugeAiChat.home",
          "name": "HUGE",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "hugeAiChat.openChat",
        "title": "HUGE",
        "category": "HUGE",
        "icon": {
          "light": "media/huge-ai-chat-icon.png",
          "dark": "media/huge-ai-chat-icon.png"
        }
      },
      {
        "command": "hugeAiChat.newThread",
        "title": "HUGE: New Thread",
        "category": "HUGE"
      },
      {
        "command": "hugeAiChat.runSetup",
        "title": "HUGE: Run Login Setup",
        "category": "HUGE"
      },
      {
        "command": "hugeAiChat.clearHistory",
        "title": "HUGE: Clear History",
        "category": "HUGE"
      },
      {
        "command": "hugeAiChat.sendSelectionToHuge",
        "title": "发送到 Huge",
        "category": "HUGE",
        "icon": {
          "light": "media/send-selection-light.svg",
          "dark": "media/send-selection-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hugeAiChat.sendSelectionToHuge",
          "when": "editorHasSelection && editorTextFocus",
          "group": "navigation@99"
        }
      ],
      "editor/title": [
        {
          "command": "hugeAiChat.openChat",
          "group": "navigation@1"
        },
        {
          "command": "hugeAiChat.sendSelectionToHuge",
          "when": "editorHasSelection && editorTextFocus",
          "group": "navigation@99"
        }
      ]
    }
  },
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true});require('fs').rmSync('artifacts',{recursive:true,force:true});}catch(e){}\"",
    "check:release": "node scripts/check-release-readiness.js",
    "check:publish-secrets": "node scripts/check-release-readiness.js --require-secrets",
    "compile": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "test": "npm run check:release && tsc -p . && node --test",
    "package:vsix": "npm run check:release && npm run compile && node -e \"require('fs').mkdirSync('artifacts',{recursive:true})\" && npx @vscode/vsce package --no-dependencies -o artifacts/huge-ai-search.vsix",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "ovsx": "^0.10.4",
    "typescript": "^5.3.0"
  }
}
