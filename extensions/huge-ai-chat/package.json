{
  "name": "huge-ai-chat",
  "publisher": "hudawang",
  "displayName": "HUGE",
  "description": "在 VS Code 中直接与 HUGE AI Mode 对话（复用 huge-ai-search MCP）",
  "icon": "media/huge-ai-chat-icon.png",
  "version": "0.2.0",
  "author": "TigerWang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangwingzero/huge-ai-search.git"
  },
  "bugs": {
    "url": "https://github.com/wangwingzero/huge-ai-search/issues"
  },
  "homepage": "https://github.com/wangwingzero/huge-ai-search/tree/main/extensions/huge-ai-chat",
  "keywords": [
    "vscode",
    "google",
    "ai",
    "mcp",
    "search",
    "chat"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hugeAiChat.openChat",
    "onCommand:hugeAiChat.newThread",
    "onCommand:hugeAiChat.runSetup",
    "onCommand:hugeAiChat.clearHistory",
    "onCommand:hugeAiChat.sendSelectionToHuge",
    "onView:hugeAiChat.home"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hugeAiChatContainer",
          "title": "HUGE",
          "icon": "media/huge-ai-chat-icon.png"
        }
      ]
    },
    "views": {
      "hugeAiChatContainer": [
        {
          "id": "hugeAiChat.home",
          "name": "HUGE"
        }
      ]
    },
    "commands": [
      {
        "command": "hugeAiChat.openChat",
        "title": "HUGE",
        "category": "HUGE",
        "icon": {
          "light": "media/huge-ai-chat-icon.png",
          "dark": "media/huge-ai-chat-icon.png"
        }
      },
      {
        "command": "hugeAiChat.newThread",
        "title": "HUGE: New Thread",
        "category": "HUGE"
      },
      {
        "command": "hugeAiChat.runSetup",
        "title": "HUGE: Run Login Setup",
        "category": "HUGE"
      },
      {
        "command": "hugeAiChat.clearHistory",
        "title": "HUGE: Clear History",
        "category": "HUGE"
      },
      {
        "command": "hugeAiChat.sendSelectionToHuge",
        "title": "发送到 Huge",
        "category": "HUGE",
        "icon": {
          "light": "media/send-selection-light.svg",
          "dark": "media/send-selection-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hugeAiChat.sendSelectionToHuge",
          "when": "editorHasSelection && editorTextFocus",
          "group": "navigation@99"
        }
      ],
      "editor/title": [
        {
          "command": "hugeAiChat.openChat",
          "group": "navigation@1"
        },
        {
          "command": "hugeAiChat.sendSelectionToHuge",
          "when": "editorHasSelection && editorTextFocus",
          "group": "navigation@99"
        }
      ]
    },
    "configuration": {
      "title": "HUGE",
      "properties": {
        "hugeAiChat.defaultLanguage": {
          "type": "string",
          "default": "zh-CN",
          "enum": [
            "zh-CN",
            "en-US",
            "ja-JP",
            "ko-KR",
            "de-DE",
            "fr-FR"
          ],
          "description": "默认搜索语言。"
        },
        "hugeAiChat.maxThreads": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "maximum": 200,
          "description": "最多保留的聊天线程数量。"
        },
        "hugeAiChat.mcp.command": {
          "type": "string",
          "default": "",
          "description": "可选。覆盖 MCP Server 启动命令。"
        },
        "hugeAiChat.mcp.args": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "可选。覆盖 MCP Server 启动参数。"
        },
        "hugeAiChat.mcp.cwd": {
          "type": "string",
          "default": "",
          "description": "可选。MCP Server 工作目录。"
        },
        "hugeAiChat.mcp.env": {
          "type": "object",
          "default": {},
          "additionalProperties": {
            "type": "string"
          },
          "description": "可选。传递给 MCP 子进程的额外环境变量。"
        }
      }
    }
  },
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true});require('fs').rmSync('artifacts',{recursive:true,force:true});}catch(e){}\"",
    "check:release": "node scripts/check-release-readiness.js",
    "check:publish-secrets": "node scripts/check-release-readiness.js --require-secrets",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "npm run check:release && npm run compile && node --test",
    "package:vsix": "npm run check:release && npm run compile && node -e \"require('fs').mkdirSync('artifacts',{recursive:true})\" && npx @vscode/vsce package --no-dependencies -o artifacts/huge-ai-chat.vsix",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.7.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "ovsx": "^0.10.4",
    "typescript": "^5.3.0"
  }
}
